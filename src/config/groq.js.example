// Groq Configuration
// Groq is OpenAI-compatible and can be used as a drop-in replacement.

export const GROQ_CONFIG = {
  // Groq API Key - should be stored in environment variables
  API_KEY: process.env.GROQ_API_KEY || 'YOUR_GROQ_API_KEY_HERE',

  // OpenAI-compatible base URL
  BASE_URL: 'https://api.groq.com/openai/v1',

  // Default model to use (Llama 3.1 8B is fast and inexpensive)
  MODEL: 'llama-3.1-8b-instant',

  // Translation settings
  MAX_TOKENS: 1000,
  TEMPERATURE: 0.3,
};

// Helper to get API key
export const getGroqKey = () => {
  return GROQ_CONFIG.API_KEY;
};
